{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/main/nodejs/**/*.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules"
  ]
} 